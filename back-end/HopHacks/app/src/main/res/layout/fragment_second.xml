<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2EEF8"
    android:backgroundTint="#004F7CAC"
    android:backgroundTintMode="src_atop"
    tools:context=".SecondFragment" >

    <TableRow
        android:layout_width="408dp"
        android:layout_height="150dp"
        app:constraint_referenced_tags="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="120dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/silent_icon" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="138dp"
            android:layout_height="128dp"
            android:background="#00FFFFFF"
            android:src="@drawable/quiet_icon" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/loud_icon" />
    </TableRow>

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416"
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/brodyatrium"
        tools:layout_editor_absoluteX="415dp"
        tools:layout_editor_absoluteY="145dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
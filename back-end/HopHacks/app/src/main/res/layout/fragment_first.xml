<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2EEF8"
    android:backgroundTint="#004F7CAC"
    android:backgroundTintMode="src_atop"
    tools:context=".FirstFragment">


    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shoplift"
        android:text="Watcha Thinkin?"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="65sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:backgroundTint="#ACD4FF"
        android:fontFamily="@font/baloo_bhai"
        android:text="@string/study_rooms"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <Button
        android:id="@+id/button_first2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:backgroundTint="#ACD4FF"
        android:fontFamily="@font/baloo_bhai"
        android:text="@string/entertainment"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="406dp"
        android:layout_height="72dp"
        android:ems="10"
        android:fontFamily="@font/Aurea"
        android:gravity="start|top"
        android:inputType="textMultiLine|text"
        android:text="For those looking for a place to grind out their homework"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="411dp"
        android:layout_height="51dp"
        android:ems="10"
        android:fontFamily="@font/Aurea"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="550dp"
        tools:text="For those looking for on-campus fun" />

</androidx.constraintlayout.widget.ConstraintLayout>